@model IEnumerable<Movie>
@{
	Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mt-5 mb-3">
	<h1 class="fw-bold text-primary mb-0">
		<i class="bi bi-tags"></i> All Movies
	</h1>

	<a asp-action="Create" class="btn btn-primary shadow-sm ">
		<i class="bi bi-plus-lg"></i> Create New
	</a>
</div>

<div class="card shadow-sm border-0 rounded-3 container">
	<div class="card-body">
		<div class="table-responsive">
			<table class="table align-middle table-hover mb-0">
				<thead class="table-light">
					<tr>
						<th scope="col" style="width: 100px;">#</th>
						<th scope="col">Name</th>
						<th scope="col">Price</th>
						<th scope="col">Status</th>
						<th scope="col">Date</th>
						<th scope="col">Time</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					@if (Model != null && Model.Any())
					{
						foreach (var item in Model)
						{
							<tr>
								<td>@item.Id</td>
								<td class="fw-semibold">@item.Name</td>
								<td class="fw-semibold">@item.Price</td>
								<td>
									@if (item.Status)
									{
										<span class="badge bg-success">Active</span>
									}
									else
									{
										<span class="badge bg-secondary">Inactive</span>
									}
								</td>
								<td class="fw-semibold">@item.Date</td>
								<td class="fw-semibold">@item.Time</td>
								<td>
									<div class="d-flex gap-2">
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
											<i class="bi bi-pencil-square"></i> Edit
										</a>

										<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
											<i class="bi bi-pencil-square"></i> Delete
										</a>
									</div>
								</td>
							</tr>
						}
					}
					else
					{
						<tr>
							<td colspan="4" class="text-center text-muted py-3">
								<i class="bi bi-info-circle"></i> No categories found.
							</td>
						</tr>
					}
				</tbody>
			</table>
			<div class="card-footer d-flex justify-content-between align-items-center">
				<small>Page number @ViewData["currentNumber"] <span class="d-none d-sm-inline-block">  </span> of @ViewData["pageNumbers"] Pages</small>
				<div>
					<small>@ViewData["currentNumber"] - @ViewData["PageNumbers"]</small>
					@if (Convert.ToInt32(ViewData["currentNumber"] ?? 1) <= 1)
					{
						<a class="btn btn-falcon-default btn-sm ms-1 ms-sm-2 disabled" tabindex="-1" aria-disabled="true" asp-action="Index" asp-route-currentNumber="@(Convert.ToInt32(ViewData["currentNumber"] ?? 1) - 1)"
						   disabled="disabled">
							<svg class="svg-inline--fa fa-chevron-left fa-w-10" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-left" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
								<path fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z"></path>
							</svg>
						</a>
					}
					else
					{
						<a class="btn btn-falcon-default btn-sm ms-1 ms-sm-2" asp-action="Index"
						   asp-route-currentNumber="@(Convert.ToInt32(ViewData["currentNumber"] ?? 1) - 1)">
							<svg class="svg-inline--fa fa-chevron-left fa-w-10" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-left" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
								<path fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z"></path>
							</svg>
						</a>
					}

					@if (Convert.ToInt32(ViewData["currentNumber"]) >= Convert.ToInt32(ViewData["pageNumbers"]))
					{
						<a class="btn btn-falcon-default btn-sm ms-1 ms-sm-2 disabled" tabindex="-1" aria-disabled="true" asp-action="Index" asp-route-currentNumber="@(Convert.ToInt32(ViewData["currentNumber"] ?? 1) + 1)">
							<svg class="svg-inline--fa fa-chevron-right fa-w-10" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" data-fa-i2svg=""><path fill="currentColor" d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"></path></svg>
							<!-- <span class="fas fa-chevron-right"></span> Font Awesome fontawesome.com -->
						</a>
					}
					else
					{
						<a class="btn btn-falcon-default btn-sm ms-1 ms-sm-2" asp-action="Index" asp-route-currentNumber="@(Convert.ToInt32(ViewData["currentNumber"] ?? 1) + 1)">
							<svg class="svg-inline--fa fa-chevron-right fa-w-10" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" data-fa-i2svg=""><path fill="currentColor" d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"></path></svg>
							<!-- <span class="fas fa-chevron-right"></span> Font Awesome fontawesome.com -->
						</a>
					}
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@if (@TempData["Cookies-succuss"] is not null)
	{
		<script>
			toastr.success('@TempData["Cookies-succuss"]');
		</script>
	}
}

