@model CategoryVM

@{
	Layout = "_AdminLayout";
	ViewData["Title"] = "Create";
}

<div class="container mt-5">
	<div class="card shadow-lg p-4 rounded-4">
		<h2 class="mb-4 text-center fw-bold text-primary">🎬 Add New Category</h2>

		<form asp-action="Create" method="post" enctype="multipart/form-data">
			<div class="row g-3">

				<!-- Category Name -->
				<div class="col-md-6">
					<label asp-for="Name" class="form-label fw-semibold">Category Name</label>
					<input asp-for="Name" class="form-control" placeholder="Enter Actor name" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<!-- Status -->
				<div class="col-md-4">
					<label asp-for="Status" class="form-label fw-semibold"></label>
					<select asp-for="Status" class="form-select">
						<option value="">Select a Status</option>
						<option value="true">Active</option>
						<option value="false">NoActive</option>
					</select>
					<span asp-validation-for="Status" class="text-danger"></span>
				</div>

			</div>

			<!-- Submit Button -->
			<div class="mt-4 text-center">
				<button type="submit" class="btn btn-primary px-5 py-2 rounded-3">Create Now</button>
				<a asp-action="Index" class="btn btn-secondary ms-3 px-4 py-2 rounded-3">Cancel</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
